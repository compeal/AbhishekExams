<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.zorba.entity.Customer" table="customer">
        <id name="customerId" column="customer_id">
            <generator class="increment"/>
        </id>
        <property name="customerName" column="customer_name" length="255"/>

        <property name="customerMobile" column="customer_mobile" length="255"/>
        <property name="finalProductPrice" column="final_product_price" length="255"/>
    </class>
</hibernate-mapping>
